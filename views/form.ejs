<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous" defer></script>
    
    <link rel="stylesheet" href="css/form.css">
    <script src="js/form.js" defer></script>

    <title>Linear-Regression</title>
</head>
<body class="bg-dark">

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="">Linear-Regression</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link" aria-current="page" href="/">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="">App</a>
              </li>
          </div>
        </div>
    </nav>

    <div class="container mt-5">
        
        <% if(typeof alert != 'undefined') { %>
            <% alert.forEach(function(error) { %>
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <%= error.msg %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            <% }) %>
        <% } %>

        <form method="POST" action="/linear">
            <div class="mb-3">
              <label id="email-label" for="Email" class="form-label">Email address</label>
              <input type="email" name="email" class="form-control" id="Email" aria-describedby="emailHelp">
              <div id="emailHelp"  class="form-text">Email-ID to share the answer.</div>
            </div>
            <div class="mb-3">
              <label id="number-label" for="input-number" class="form-label">Number</label>
              <input type="number" name="numberinput" class="form-control" id="input-number">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

    <% if(typeof prediction == 'undefined') { %>
        <div id="warning" class="container d-flex justify-content-center mb-5">

        </div>
        <div id="warning-text" class="container d-flex justify-content-center mb-5">

        </div>
        
    <% } %>

    <div class="container">
        <% if(typeof prediction != 'undefined') { %>
            <div class="alert alert-success" role="alert">
                <h4>
                    Prediction == <%= Math.round(prediction.output.data) %>
                </h4>
            </div>
        <% } %>
    </div>

</body>
</html>